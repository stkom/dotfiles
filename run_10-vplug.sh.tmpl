{{- /* vim: set ft=sh: */ -}}
#!/usr/bin/env bash

dst="$HOME/.vim/autoload/plug.vim"

{{ if .enable_vplug -}}
if [[ ! -e $dst ]]; then
  curl --create-dirs -fLo "$dst" \
    'https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'
fi
{{- else -}}
if [[ -e $dst ]]; then
  rm "$dst"
fi
{{- end }}
