[data]
fzfdir = "/usr/share/fzf"
nvmdir = "$HOME/.local/share/nvm"
nvmsrc = "/usr/share/nvm"
zdotdir = "${XDG_CONFIG_HOME:-$HOME/.config}/zsh"

{{ if ne .chezmoi.hostname "freenas" -}}
editor = "nvim"
enable_fzf = true
enable_nvm = true
enable_vplug = true
{{- else -}}
editor = "vim"
enable_fzf = false
enable_nvm = false
enable_vplug = false
{{- end }}
